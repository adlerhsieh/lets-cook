</head>
<body>







<div id="layout" class="pure-g">
    <div class="sidebar pure-u-1 pure-u-md-1-4">
        <div class="header">
            <h1 class="brand-title">Welcome!</h1>
            <h2 class="brand-tagline"><%= current_user.name %></h2>

        
        </div>
    </div>

    <div class="content pure-u-1 pure-u-md-3-4">
        <div>
            <!-- A wrapper for all the blog posts -->
            

                <!-- A single blog post -->
            <div class="posts">
                <h1 class="content-subhead">舉辦新活動</h1> 
                <section class="post">
                    <form class="pure-form pure-form-aligned">
                        <fieldset>
                            <div class="pure-control-group">
                                <label for="">活動地點</label>
                                <input id="place" type="text" placeholder="">
                            </div>

                            <div class="pure-control-group">
                                <label for="">活動時間</label>
                                <input id="time" type="password" placeholder="">
                            </div>

                            <div class="pure-control-group">
                                <label for="">主辦人</label>
                                <input id="holder" type="email" placeholder="">
                            </div>

                            <div class="pure-control-group">
                                <label for="deadline">加菜期限</label>
                                <input id="deadline" type="text" placeholder="">
                            </div>

                            <div class="pure-controls">
                                

                                <button type="submit" class="pure-button pure-button-primary">建立</button>
                            </div>
                        </fieldset>
                    </form>

                    
                </section>
            </div>
            <div class="posts">
                <h1 class="content-subhead">您參加的活動</h1>

                

                <section class="post">
                    <div class="pure-g">
                        <div class="pure-u-1 pure-u-md-2-3">
                            <header class="post-header">
                        
                            <% @events.each do |event| %>
                                <h2 class="post-title"><%= @event.time %></h2>

                                <p class="post-meta">
                                    By <%= @event.holder %>
                                </p>
                                    <br>
                                 <p class="post-meta">
                                    At <%= @event.place %>
                                </p>
                            <% end %>                            
                            </header>
                        </div>
                        <div class="pure-u-1 pure-u-md-1-3">
                            <button class="pure-button pure-button-primary enter">進入</button>
                        </div>
                    </div>
                    
                    
                    
                </section>

                
                
            </div>
        </div>
    </div>
</div>






</body>
</html>
