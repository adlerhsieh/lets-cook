</head>
<body>







<div id="event_index_layout" class="pure-g">
    <div class="sidebar pure-u-1 pure-u-md-1-4">
        <div class="header">
            <h1 class="brand-title">Welcome!</h1>
            <h2 class="brand-tagline"><%= current_user.name %></h2>

        
        </div>
    </div>

    <div class="content pure-u-1 pure-u-md-3-4">
        <div>
            <!-- A wrapper for all the blog posts -->
            

                <!-- A single blog post -->
            <div class="posts">
                <h1 class="content-subhead">舉辦新活動</h1> 
                <section class="post">
                    <%= form_for @new_event, :class => "pure-form pure-form-aligned"  do |form| %>
                            <p style="color:red"><%= flash[:notice] %></p>
                            <div class="pure-control-group">
                                <label for="">活動地點</label>
                                <%= form.text_field :hold_place, :class => "placeholder", :id => "place" %>
                            </div>

                            <div class="pure-control-group">
                                <label for="">活動時間</label>
                                <%= form.text_field :hold_time, :class => "placeholder", :id => "time", :placeholder => "格式：2015-01-01" %>
                            </div>

                            <div class="pure-control-group">
                                <label for="dealine">加菜期限</label>
                                <%= form.text_field :add_dish_dealine, :class => "placeholder", :id => "dealine", :placeholder => "格式：2015-01-01" %>
                            </div>
                            <div class="pure-controls">
                                <%= form.submit "建立", :class => "pure-button pure-button-primary submit-new-event" %>
                            </div>
                    <% end %>
                    
                </section>
            </div>
            <div class="posts">
                <h1 class="content-subhead">您參加的活動</h1>

                

                <section class="post">
                    <div class="pure-g">
                        <div class="pure-u-1 pure-u-md-2-3">
                            <header class="post-header">
                        
                        <% if @events %>
                            <% @events.each do |event| %>
                                <h2 class="post-title"><%= @event.time %></h2>

                                <p class="post-meta">
                                    By <%= @event.holder %>
                                </p>
                                    <br>
                                 <p class="post-meta">
                                    At <%= @event.place %>
                                </p>
                            <% end %> 
                        <% end %>                           
                            </header>
                        </div>
                        <div class="pure-u-1 pure-u-md-1-3">
                            <button class="pure-button pure-button-primary enter">進入</button>
                        </div>
                    </div>
                    
                    
                    
                </section>

                
                
            </div>
        </div>
    </div>
</div>






</body>
</html>
